<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SnookerScore"/>
    <style name="SnookerScore.Button"/>
    <style name="SnookerScore.Toolbar" parent="@style/Widget.Material3.Toolbar">
        <item name="titleTextColor">@color/light_grey</item>
    </style>
    <style name="SnookerScore.Button.Primary" parent="@style/Widget.Material3.Button">
        <item name="backgroundTint">@color/light_grey</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodyLarge</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="SnookerScore.Button.Primary.Critical">
        <item name="backgroundTint">@color/red</item>
        <item name="android:textColor">@color/light_grey</item>
    </style>
    <style name="SnookerScore.Button.PrimaryDialogue" parent="@style/Widget.Material3.Button">
        <item name="backgroundTint">@color/green</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodyLarge</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="SnookerScore.Button.Secondary" parent="@style/Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/green</item>
        <item name="strokeWidth">@dimen/width_secondary_button</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodyLarge</item>
        <item name="android:textColor">@color/green</item>
    </style>
    <style name="SnookerScore.Button.Secondary.LightGrey">
        <item name="strokeColor">@color/light_grey</item>
        <item name="android:textColor">@color/light_grey</item>
    </style>
    <style name="SnookerScore.CardView">
        <item name="cardBackgroundColor">@color/light_grey</item>
        <item name="cardCornerRadius">@dimen/radius_01</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="contentPadding">@dimen/spacing_02</item>
    </style>
    <style name="SnookerScore.LargeTitle" parent="@style/TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/light_grey</item>
    </style>
    <style name="SnookerScore.MediumTitle" parent="@style/TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/light_grey</item>
    </style>
    <style name="SnookerScore.LargeBody" parent="@style/TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/light_grey</item>
    </style>
    <style name="SnookerScore.ImageButton">
        <item name="android:padding">@dimen/spacing_01</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="SnookerScore.ExtendedFloatingActionButton">
        <item name="backgroundTint">@color/red</item>
        <item name="android:textColor">@color/light_grey</item>
    </style>
</resources>