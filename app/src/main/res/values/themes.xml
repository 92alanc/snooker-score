<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.SnookerScore" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand colours -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand colours -->
        <item name="colorSecondary">@color/red</item>
        <item name="colorOnSecondary">@color/light_grey</item>
        <!-- Status bar colour -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- App theme -->
        <item name="colorControlNormal">@color/light_grey</item>
        <item name="colorControlActivated">@color/green</item>
        <item name="fontFamily">@font/raleway_regular</item>
        <item name="android:textColorSecondary">@color/light_grey</item>
        <item name="android:colorBackground">?attr/colorPrimaryVariant</item>
        <item name="android:forceDarkAllowed" tools:ignore="NewApi">false</item>
    </style>
</resources>